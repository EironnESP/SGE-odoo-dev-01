<odoo>
  <data>
    <record id="alc_karting.carrera_form" model="ir.ui.view">
      <field name="name">alc_karting.carrera.form</field>
      <field name="model">alc_karting.carrera</field>
      <field name="arch" type="xml">
        <form string="Carrera">
          <sheet>
            <group>
              <field name="name" />
              <field name="fecha" />
              <field name="num_competidores" />
              <field name="num_vueltas" />
              <field name="karts_ids">
                <tree string="Kart">
                  <field name="name" />
                  <field name="caballos" />
                  <field name="control_remoto" />
                  <field name="nick_competidor" />
                </tree>
              </field>
              <field name="competidores_ids">
                <tree string="Competidor">
                  <field name="name" />
                  <field name="nombre" />
                  <field name="apellidos" />
                  <field name="equipo_id" />
                  <field name="numero_kart" />
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="alc_karting.carrera_tree" model="ir.ui.view">
      <field name="name">alc_karting.carrera.tree</field>
      <field name="model">alc_karting.carrera</field>
      <field name="arch" type="xml">
        <tree string="Carrera">
          <field name="name" />
          <field name="fecha" />
          <field name="num_competidores" />
          <field name="num_vueltas" />
          <field name="karts_ids" />
          <field name="competidores_ids" />
        </tree>
      </field>
    </record>

    <record id="alc_karting.carrera_calendar" model="ir.ui.view">
      <field name="name">alc_karting.carrera.calendar</field>
      <field name="model">alc_karting.carrera</field>
      <field name="arch" type="xml">
        <calendar date_start="fecha" string="Carrera" mode="year" event_open_popup="true" date_stop="fecha">
          <field name="name" />
          <field name="fecha" />
          <field name="num_competidores" />
          <field name="num_vueltas" />
          <field name="karts_ids" />
          <field name="competidores_ids" />
        </calendar>
      </field>
    </record>
  </data>
</odoo>
