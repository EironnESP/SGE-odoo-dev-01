<odoo>
  <data>
    <record id="alc_karting.competidor_form" model="ir.ui.view">
      <field name="name">alc_karting.competidor.form</field>
      <field name="model">alc_karting.competidor</field>
      <field name="arch" type="xml">
        <form string="Competidor">
          <sheet>
            <group>
              <field name="name" />
              <field name="nombre" />
              <field name="apellidos" />
              <field name="num_carreras" />
              <field name="equipo_id" />
              <field name="carreras_ids">
                <tree string="Carrera">
                  <field name="name" />
                  <field name="fecha" />
                  <field name="num_competidores" />
                  <field name="num_vueltas" />
                </tree>
              </field>
              <field name="numero_kart" />
              <field name="foto" widget="image" class="oe_right oe_avatar" options="{'size':[200,200]}"/>
            </group>
          </sheet>
          <div class="oe_chatter">
               <field name="message_follower_ids" groups="base.group_user"/>
               <field name="message_ids" widget="mail_thread"/>
           </div>
        </form>
      </field>
    </record>

    <record id="alc_karting.competidor_tree" model="ir.ui.view">
      <field name="name">alc_karting.competidor.tree</field>
      <field name="model">alc_karting.competidor</field>
      <field name="arch" type="xml">
        <tree string="Competidor">
          <field name="name" />
          <field name="nombre" />
          <field name="apellidos" />
          <field name="num_carreras" />
          <field name="equipo_id" />
          <field name="carreras_ids" />
          <field name="numero_kart" />
          <field name="foto" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"/>
        </tree>
      </field>
    </record>

    <record id="alc_karting.competidor_search" model="ir.ui.view">
      <field name="name">alc_karting.competidor.search</field>
      <field name="model">alc_karting.competidor</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Nick"/>
          <field name="nombre" string="Nombre"/>
          <field name="apellidos" string="Apellidos"/>
          <field name="equipo_id" string="Equipo"/>
          <field name="numero_kart" string="NÃºmero del kart"/>
          <filter name="novatos" string="Novatos" domain="[('num_carreras', '&lt;=', 5)]"/>
          <filter name="activos" string="Activos" domain="[('num_carreras', '&gt;', 5),('num_carreras', '&lt;', 30)]"/>
          <filter name="experimentados" string="Experimentados" domain="[('num_carreras', '&gt;=', 30)]"/>
          <group expand="0" string="Group By">
            <filter name="equipo" string="Equipo" context="{'group_by': 'equipo_id'}"/>
          </group>
        </search>
      </field>
    </record>
  </data>
</odoo>